<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import java.lang.String?>
<?import javafx.scene.layout.GridPane?>
<?import be.virtualsushi.jfx.dorse.control.FieldLabel?>
<?import be.virtualsushi.jfx.dorse.control.EditButton?>
<?import be.virtualsushi.jfx.dorse.control.TextField?>
<?import be.virtualsushi.jfx.dorse.control.TextAreaField?>
<?import be.virtualsushi.jfx.dorse.control.EditableList?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import be.virtualsushi.jfx.dorse.control.ControlsButtonsBar?>
<?import be.virtualsushi.jfx.dorse.control.FloatNumberField?>
<?import be.virtualsushi.jfx.dorse.control.IntegerNumberField?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="20">
	<padding>
		<Insets bottom="10" left="10" right="10" top="10" />
	</padding>

	<children>
		<Label fx:id="title">
			<styleClass>
				<String fx:value="activity-title" />
			</styleClass>
		</Label>

		<GridPane vgap="5" hgap="10">

			<FieldLabel value="%id" GridPane.columnIndex="0"
				GridPane.rowIndex="0" />
			<Label fx:id="idField" GridPane.columnIndex="1"
				GridPane.rowIndex="0" GridPane.columnSpan="3" />
			<FieldLabel value="%stock" GridPane.columnIndex="4"
				GridPane.rowIndex="0" />
			<Label fx:id="stockField" GridPane.columnIndex="5"
				GridPane.rowIndex="0" />
			<EditButton onAction="#handleEditStock"
				GridPane.columnIndex="6" GridPane.rowIndex="0" />

			<FieldLabel value="%code" GridPane.columnIndex="0"
				GridPane.rowIndex="1" />
			<TextField fx:id="codeField" GridPane.columnIndex="1"
				GridPane.rowIndex="1" GridPane.columnSpan="2" fieldWidth="150" />
			<FieldLabel value="%created" GridPane.columnIndex="3"
				GridPane.rowIndex="1" />
			<Label fx:id="createdField" GridPane.columnIndex="4"
				GridPane.rowIndex="1" GridPane.columnSpan="3" />

			<FieldLabel value="%name" GridPane.columnIndex="0"
				GridPane.rowIndex="2" />
			<TextField fx:id="nameField" GridPane.columnIndex="1"
				GridPane.rowIndex="2" GridPane.columnSpan="6" fieldWidth="400" />

			<FieldLabel value="%description" GridPane.columnIndex="0"
				GridPane.rowIndex="3" />
			<TextAreaField fx:id="descriptionField"
				GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="6"
				fieldWidth="400" prefHeight="100" />

			<FieldLabel value="%type" GridPane.columnIndex="0"
				GridPane.rowIndex="4" />
			<EditableList fx:id="typeField" GridPane.columnIndex="1"
				GridPane.rowIndex="4" fieldWidth="360" GridPane.columnSpan="6" />

			<FieldLabel value="%price" GridPane.columnIndex="0"
				GridPane.rowIndex="5" />
			<FloatNumberField fx:id="priceField" GridPane.columnIndex="1"
				GridPane.rowIndex="5" fieldWidth="400" GridPane.columnSpan="6" />

			<FieldLabel value="%weight" GridPane.columnIndex="0"
				GridPane.rowIndex="6" />
			<IntegerNumberField fx:id="weightField" GridPane.columnIndex="1"
				GridPane.rowIndex="6" fieldWidth="100" />
			<Label text="%g" GridPane.columnIndex="2" GridPane.rowIndex="6"
				GridPane.halignment="LEFT" />
			<FieldLabel value="%unit" GridPane.columnIndex="3"
				GridPane.rowIndex="6" />
			<EditableList fx:id="unitField" GridPane.columnIndex="4"
				GridPane.rowIndex="6" GridPane.columnSpan="3" fieldWidth="140" />

			<FieldLabel value="%supplier" GridPane.columnIndex="0"
				GridPane.rowIndex="7" />
			<EditableList fx:id="supplierField"
				GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.columnSpan="6"
				fieldWidth="360" />

			<ControlsButtonsBar GridPane.columnIndex="1" GridPane.columnSpan="6"
				GridPane.rowIndex="9" alignment="BOTTOM_RIGHT" onSaveAction="#handleSave"
				onCancelAction="#handleCancel" saveButtonTitle="%save"
				cancelButtonTitle="%cancel" />

		</GridPane>
	</children>
</VBox>

