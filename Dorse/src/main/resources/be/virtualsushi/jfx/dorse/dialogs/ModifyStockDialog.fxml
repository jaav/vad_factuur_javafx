<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import be.virtualsushi.jfx.dorse.control.FieldLabel?>
<?import javafx.scene.control.Label?>
<?import be.virtualsushi.jfx.dorse.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" >
	<padding>
		<Insets top="15" right="15" bottom="15" left="15"/>
	</padding>

	<FieldLabel value="%old.value" GridPane.columnIndex="0"
		GridPane.rowIndex="0" />
	<Label fx:id="oldValueField" GridPane.columnIndex="1"
		GridPane.rowIndex="0" />

	<FieldLabel value="%new.value" GridPane.columnIndex="0"
		GridPane.rowIndex="1" />
	<TextField fx:id="newValueField" GridPane.columnIndex="1"
		GridPane.rowIndex="1" fieldWidth="200" />

	<HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2"
		alignment="BOTTOM_RIGHT">
		<children>
			<Button text="%save" onAction="#handleSave" />
			<Button text="%cancel" onAction="#handleCancel" />
		</children>
	</HBox>

</GridPane>

